<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".qrCodeReader">
    <eu.livotov.labs.android.camview.ScannerLiveView
        android:id="@+id/camview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


    </eu.livotov.labs.android.camview.ScannerLiveView>
    <TextView
        android:id="@+id/idTVscanned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/WHITE"
        android:padding="5dp"
        android:text="@string/scanned_data"
        android:textColor="@color/BLACK" />
    <Button
        android:id="@+id/btn_back_qrR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom||right"
        android:layout_margin="50dp"
        android:background="@drawable/back_blue_btn_format"
        android:padding="10dp"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="@color/BLACK"
        android:textStyle="bold" />


</FrameLayout>
