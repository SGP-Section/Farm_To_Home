<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BuyerCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recycler_background"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/imageCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Cropimage"
                    android:src="@drawable/ic_vegetables"
                    android:layout_marginRight="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top" />

                <LinearLayout
                    android:backgroundTint="@color/Done_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="Seller Information"
                        android:textColor="#151515"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txt_sellerName_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:hint="Seller Name"
                        android:textColor="@color/BLACK"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txt_sellerPhno_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:hint="+911234567890"
                        android:textColor="#151515"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_dphno"

                    android:text="Crop: "
                    android:textColor="#151515"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_crop_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_dphno"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/txt_c"
                    android:paddingStart="2dp"
                    android:text="Tomato"
                    android:textColor="#151515"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_Quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_c"

                    android:text="Available Quantity(Q): "
                    android:textColor="#151515"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_quantity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_c"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/txt_Quantity"
                    android:paddingStart="2dp"
                    android:text="00"
                    android:textColor="#151515"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_Quantity"

                    android:text="Weight in 1Q: "
                    android:textColor="#151515"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_weight_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_Quantity"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/txt_weight"
                    android:paddingStart="2dp"
                    android:text="00.00 kg"
                    android:textColor="#151515"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_weight"

                    android:text="Price 1Q: "
                    android:textColor="#151515"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_price_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_Quantity"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/txt_price"
                    android:paddingStart="2dp"
                    android:text="â‚¹ 000"
                    android:textColor="#151515"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_Area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_price"

                    android:text="Area: "
                    android:textColor="#151515"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_area_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_weight"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/txt_Area"
                    android:paddingStart="2dp"
                    android:text="Anywhere"
                    android:textColor="#151515"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/callButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_call"
                app:srcCompat="@android:drawable/stat_sys_phone_call" />

            <ImageButton
                android:id="@+id/To_Buy_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/normal_btn_format"
                android:src="@drawable/ic_baseline_arrow_forward_24" />


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>