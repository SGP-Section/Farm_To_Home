<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/empty_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/bitter"
        android:gravity="center"
        android:text="Title"
        android:textColor="@color/BLACK"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/empty_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bitter"
        android:gravity="center"
        android:text="This Section does not contain any DATA"
        android:layout_below="@id/empty_title"
        android:textColor="@color/BLACK"
        android:textStyle="bold" />


        <Button
            android:id="@+id/btn_back_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:background="@drawable/back_blue_btn_format"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:padding="10dp"
            android:text="Back"
            android:textSize="20dp"
            android:textColor="#2E2929"
            android:textStyle="bold" />

</RelativeLayout>