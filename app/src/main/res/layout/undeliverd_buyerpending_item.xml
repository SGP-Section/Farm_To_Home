<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:background="@drawable/recycler_background"
    android:orientation="vertical"
    android:padding="4dp"
    app:layout_constraintCircleRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_buyer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10sp"
                android:text="Buyer Name:"
                android:textColor="#151515"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/value_buyer_name_undel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Charmi Patel"
                android:textColor="#151515"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_buyer_phno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10sp"
                android:text="Phone No:"
                android:textColor="#151515"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/value_buyer_phno_undel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text="9876543210"
                android:textColor="#151515"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_crop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10sp"
                android:text="Crop:"
                android:textColor="#151515"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/value_crop_name_undel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Tomato"
                android:textColor="#151515"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10sp"
                android:text="Price: Rs."
                android:textColor="#151515"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/value_price_undel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text="20.00"
                android:textColor="#151515"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text="/-"
                android:textColor="#151515"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/value_no_of_item_undel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10sp"
                android:text="No "
                android:textColor="#151515"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" X 1Q("
                android:textColor="#151515"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/value_amount_1Q_undel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00kg"
                android:textColor="#151515"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textColor="#151515"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="="
                android:textColor="#151515"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/value_total_amount_undel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00kg"
                android:textColor="#151515"
                android:textSize="20sp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:text="Area: "
                    android:textColor="#151515"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/value_area_undel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Ankleshwar"
                    android:textColor="#151515"
                    android:textSize="20sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_del_undeli_pending"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/confirm"
            android:fontFamily="@font/coustard"
            android:padding="10dp"
            android:text="Delivered"
            android:textColor="@color/BLACK" />

        <ImageButton
            android:id="@+id/btn_cancel_undeli_pending"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/cancel"
            android:fontFamily="@font/coustard"
            android:padding="10dp"
            android:text="Cancel"
            android:textColor="@color/BLACK" />

    </LinearLayout>
</LinearLayout>

